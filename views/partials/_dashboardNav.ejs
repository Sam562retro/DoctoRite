<div class="m-0 p-0" style="background-color: #caebf2; height: 100vh;">
    <div class="m-0 p-0 pt-3 text-center" style="background-color: #ff3b3f; height: 25vh;">
        <p class="h4" style="color: white;">Welcome</p>
        <a href="/profile/<%= data.typeAcc %>/<%= data._id %>" class="h1" style="text-decoration: none; color: #efefef;"><%= data.name %></a>
    </div>
    <style>
        .buttonDashboard:hover{
            background-color: #00d0ff !important;
            color: whitesmoke !important;
        }

        .buttonDashboard{
            transition: all ease-out 500ms; 
            border-radius: 10px;   
        }

        .button1{
            border: none; 
            background-color:#caebf2; 
            width: 100%; 
            height: 8vh; 
            color: rgb(74, 74, 74); 
        }
        .button2{
            border: none; 
            background-color:#b0e3ee; 
            width: 100%; 
            height: 8vh; 
            color: rgb(74, 74, 74);
        }
    </style>
    <div class="m-0 p-0 text-center" style="height: 60vh">
        <button class="m-0 p-0 h4 buttonDashboard button1" onclick="location.href='http://localhost:3000/'">Home</button>
        <% if(data.typeAcc == '1' || data.typeAcc == '2'){ %>
            <button class="m-0 p-0 h4 buttonDashboard button2">Family Status</button>
        <% } %>
        <% if(data.typeAcc == '1'){ %>
            <button class="m-0 p-0 h4 buttonDashboard button1">Patient Status</button>
        <% } %>
        <% if(data.typeAcc == '3'){ %>
            <button class="m-0 p-0 h4 buttonDashboard button2" onclick="location.href='http://localhost:3000/consult-a-doctor'">Consult Doctors</button>
        <% } %>
        <button class="m-0 p-0 h4 buttonDashboard button2" onclick="location.href='http://localhost:3000/ask-for-help'">Ask Help</button>

    </div> 
    <div class="m-0 p-0 pt-3 text-center" style="height: 15vh;">
        <button onclick="location.href='/logout'" class="m-0 p-0 h4" style="border: none; background-color:#ff3b3f; width: 100%; height: 15vh; color: #efefef;">LogOut</button>
    </div>
</div>